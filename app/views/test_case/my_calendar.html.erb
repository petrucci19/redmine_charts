<% content_for :head do %>
	<style>
		#year {
		  font: 10px sans-serif;
		  
		}

		.day {
		  fill: #F5F5F5;

		}

		.month {
		  fill: none;
		  stroke: #C6C6C6;
		  stroke-width: 1px;
		  shape-rendering: crispEdges;
		}

		.month_label {
		  fill: #B0B0B0;
		}

		.RdYlGn .q0-11{fill:rgb(165,0,38)}
		.RdYlGn .q1-11{fill:rgb(215,48,39)}
		.RdYlGn .q2-11{fill:rgb(244,109,67)}
		.RdYlGn .q3-11{fill:rgb(253,174,97)}
		.RdYlGn .q4-11{fill:rgb(254,224,139)}
		.RdYlGn .q5-11{fill:rgb(255,255,191)}
		.RdYlGn .q6-11{fill:rgb(217,239,139)}
		.RdYlGn .q7-11{fill:rgb(166,217,106)}
		.RdYlGn .q8-11{fill:rgb(102,189,99)}
		.RdYlGn .q9-11{fill:rgb(26,152,80)}
		.RdYlGn .q10-11{fill:rgb(0,104,55)}
	</style>

	<script type="text/javascript">
	
		$(document).ready(function(){
			$(".year_select").change(function() {
					//$(this > option)[0].attr("disabled", "disabled");
					year_from = $('select#year_from :selected').val();
					year_to = $('select#year_to :selected').val();

					ajaxYearRenderer(year_from, (Number(year_to) + 1).toString() );
					
				});	
		});

	</script>

<% end %>


<div id="year_select">
	<select class="year_select" id="year_from">
		<option value="empty">--Select--</option>
		<option value="2009">2009</option>
		<option value="2010">2010</option>
		<option value="2011">2011</option>
    	<option value="2012">2012</option>
	</select>

	<select class="year_select" id="year_to">
		<option value="empty">--Select--</option>
		<option value="2009">2009</option>
		<option value="2010">2010</option>
		<option value="2011">2011</option>
    	<option value="2012">2012</option>
	</select>
</div>

<div id="year"></div>
