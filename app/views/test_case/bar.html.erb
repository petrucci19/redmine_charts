<% content_for :head do %>
	<script type="text/javascript">

		$(document).ready(function(){
			$("#bar1_load").click(function() {
				options = {barWidth:10, colors:[ "#3366CC", "#DC3912", "#FF9900", "#109618"], labels: ['Expected Hours','Design and Analysis','Development','Bug Fixing'] };
				bar1Renderer('/bar1', "bar1", options);
			});			
		});

	</script>
<% end %>

<h1>Bar Graphs</h1>

<div="bar1_outer">
	<div id="bar1" style="height:400px; width:600px;"></div>
	<button type="button" id="bar1_load" class="btn btn-primary" style="margin-top:10px;">Load data</button>
</div>
