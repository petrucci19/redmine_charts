<h1>Add new test case</h1>
<%= form_for @testcase,  :url => { :action => 'create'} do |f| %>
	<p>
		<label for="test case title">Title:</label>
		<%= text_field(:testcase, :title) %>
	</p>

	
	<p>
		<label for="test case project">Project:</label>
		<%= collection_select(:testcase,:project_id,@projects,:id,:name) %>
	</p>

	<p>
		<label for="test case status">Status:</label>
		<%= collection_select(:testcase,:status_id,@statuses,:id,:name) %>
	</p>

	<p>
		<label for="test case content">Description:</label>
		<%= text_area(:testcase, :content) %>
	</p>
	
	<%= f.submit ("Submit"), class: "btn btn-large btn-primary" %>
	
<% end %>
<%= link_to 'Back', {:action => 'list'} %>